{
  "name": "EcoCart",
  "description": "Base Level Extension",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["tabs", "scripting", "notifications"],
  "host_permissions": ["*://*.amazon.com/*"],
  "background": {
    "service_worker": "scripts/background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/icon.png"
  }
}